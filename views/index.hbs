
<div class="container-fluid index-container">
<div class="movies-container">
<div class="movies-subcontainer">
<h2>Movies</h2>
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Plot</th>
      <th>Celebrity</th>
    </tr>
  </thead>
  <tbody>
    {{#each movies as |movie| }}
      <tr>
        <td><a href="/movies/{{movie._id}}/edit">{{ movie.title }}</a></td>
        <td>{{ movie.genre }}</td>
        <td>{{ movie.plot }}</td>
        <td>
          <a href="/celebrities/{{movie.celebrity._id}}">{{movie.celebrity.name}}</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<a class="btn btn-primary btn-block mb-3" href="/movies/create">New Movie</a>
</div>
</div>
<div class="celebrities-container">
<div class="celebrities-subcontainer">
<h2>Celebrities</h2>
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Occupation</th>
      <th>CatchPhrase</th>
    </tr>
  </thead>
  <tbody>
    {{#each celebrities as |celebrity| }}
      <tr>
            <td><a href="/celebrities/{{celebrity._id}}/">{{ celebrity.name }}</a></td>
            <td>{{ celebrity.occupation }}</td>
            <td>{{ celebrity.catchPhrase }}</td>
          </a>
      </tr>
    {{/each}}
    
  </tbody>
</table>
<a class="btn btn-primary btn-block mb-3" href="/celebrities/create">New Celebrity</a>
</div>
</div>
</div>